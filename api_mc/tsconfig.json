  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "target": "es6",        
    "module": "commonjs",  
    "outDir": "dist",
    "esModuleInterop": true,  
    "incremental": true,
    "typeRoots": [
      "../node_modules/@types"
    ],                                  
    "types": ["node"],    
  },
  "include": [
    "**/*.ts",
    "*.ts",
  ],
  "exclude":[
    "node_modules"
  ]
}
